{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch main.tsx",
    "start": "deno run --allow-net --allow-env --allow-read main.tsx",
    "compile": "deno compile --allow-net --allow-env --allow-read main.tsx",
    "test:build": "deno compile --allow-net --allow-env --allow-read --target x86_64-unknown-linux-gnu --output ../../figma-oauth main.tsx",
    "build": "deno compile --allow-net --allow-env --allow-read --target x86_64-unknown-linux-gnu --output ../../figma-oauth main.tsx"
  },
  "imports": {
    "hono": "jsr:@hono/hono@^4.7.7",
    "hono/cors": "jsr:@hono/hono@^4.7.7/cors",
    "hono/jsx": "jsr:@hono/hono@^4.7.7/jsx",
    "std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.3/colors"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*.tsx", "*.ts", "components/"]
  },
  "lint": {
    "include": ["*.tsx", "*.ts", "components/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
